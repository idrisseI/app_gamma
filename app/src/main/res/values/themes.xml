<resources>
    <!-- Base application theme. -->
    <style name="Theme.RESEAU" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000DFF</item>
        <item name="colorPrimaryVariant">#001391</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00FFE6</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Text color. -->
        <item name="android:textAppearance">@style/MyText</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MyText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>